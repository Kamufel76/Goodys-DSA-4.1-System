<form>
    <div class="form-group">
        <label>{{localize "GDSA.itemsheet.spellname"}}</label>
        <input type="text" name="name" value="{{name}}" />
    </div>
    <div class="form-group">
        <label>{{localize "GDSA.itemsheet.spellminZfW"}}</label>
        <input type="number" name="minZ" value={{minZfW}} />
    </div>
    <div class="form-group">
        <label>{{localize "GDSA.itemsheet.disad"}}</label>
        <input type="number" name="disad" value={{disad}} />     
    </div>
    <div class="form-group">
        <label>{{localize "GDSA.itemsheet.cost"}}</label>
        <input type="number" name="cost" value={{cost}} />     
    </div>
    <div class="form-group displayMod" style="display: contents;">
        <label>{{localize "GDSA.itemsheet.regla"}} 1</label>
        <select class="input95 spellvariInput" name="reglaKind1">
            {{#select reglaKind1}}
                <option value="only">{{localize "GDSA.itemsheet.only"}}</option>
                <option value="not">{{localize "GDSA.itemsheet.not"}}</option>
            {{/select}}
        </select>
        <select class="input130" name="rep1">
            {{#select rep1}}
                {{#each config.magicReps as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group displayMod" style="display: contents;">
        <label>{{localize "GDSA.itemsheet.regla"}} 2</label>
        <select class="input95 spellvariInput" name="reglaKind2">
            {{#select reglaKind2}}
                <option value="only">{{localize "GDSA.itemsheet.only"}}</option>
                <option value="not">{{localize "GDSA.itemsheet.not"}}</option>
            {{/select}}
        </select>
        <select class="input130" name="rep2">
            {{#select rep2}}
                {{#each config.magicReps as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group displayMod" style="display: contents;">
        <label>{{localize "GDSA.itemsheet.regla"}} 3</label>
        <select class="input95 spellvariInput" name="reglaKind3">
            {{#select reglaKind3}}
                <option value="only">{{localize "GDSA.itemsheet.only"}}</option>
                <option value="not">{{localize "GDSA.itemsheet.not"}}</option>
            {{/select}}
        </select>
        <select class="input130" name="rep3">
            {{#select rep3}}
                {{#each config.magicReps as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
</form>