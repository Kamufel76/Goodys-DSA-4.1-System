<div class="GDSA chat message">
    <div class="iniBox">
        
        <div class="flawName">{{localize "GDSA.combat.DMG"}}</div>
        <div class="dicefiller"></div>
        <div class="diceCol2">
            <div class="dices2">
                {{#each roll.dice.[0].values}}
                    <div class="diceD6">{{this}}</div>
                {{/each}}
            </div>
        </div>

        <div class="dicefiller"></div>
        <div class="dice-formula">
            <div class="rollFlawSuccess">{{totalDMG}} {{localize "GDSA.combat.DMGOf"}}</div>
        </div>

        <div class="dicefiller"></div>
        <div class="dice-formula">
            <div class="rollFlawSuccess">{{zone}}</div>
        </div>

        <div class="dicefiller"></div>
        <label class="switch">
            <input type="checkbox" checked>
            <span class="slider"></span>
        </label>
        <button class="test item bntChat4" data-chatId="{{chatId}}">1/2</button>
        <button class="test item bntChat4" data-chatId="{{chatId}}">1</button>
        <button class="test item bntChat4" data-chatId="{{chatId}}">1.5</button>
        <button class="test item bntChat4" data-chatId="{{chatId}}">2</button>
        <button class="test item bntChat5" data-chatId="{{chatId}}">Heal</button>
    </div>
</div>