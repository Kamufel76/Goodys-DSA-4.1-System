<div class="GDSA chat message">
    <div class="flawBox">

        <div class="flawName">{{flawName}} {{flawValue}}</div>
        <div class="dicefiller"></div>

        <div id="collapsable">
            <div class="diceCol">
                <div class="dices">
                    {{#unless confirm}}
                        <div class="diefiller"></div>
                    {{/unless}}
                    <div class="dice">{{roll.total}}</div>
                    {{#if confirm}}
                        <div class="dice">{{roll2.total}}</div>
                    {{/if}}
                </div>
            </div>
        
            <div class="dicefiller"></div>
        </div>

        <div class="dice-formula">
            {{#if result}}
                <div class="rollFlawSuccess">{{localize "GDSA.chat.flaw.success"}}<span id="additionalInfo"></span></div>
            {{else}}
                <div class="rollFlawFail">{{localize "GDSA.chat.flaw.fail"}}<span id="additionalInfo"></span></div>
            {{/if}}
        </div>
    </div>
</div>