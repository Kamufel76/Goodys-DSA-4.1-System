<form>
    <div class="form-group">
        <label>{{localize "GDSA.chat.skill.disadvantage"}}</label>
        <input type="number" name="disad" value="0" />
    </div>
    <div class="form-group">
        <label>{{localize "GDSA.chat.skill.bonusDMG"}}</label>
        <input type="number" name="bonus" value="0" />
    </div>
    <div class="form-group">
        <label>{{localize "GDSA.chat.skill.aimed"}}</label>
        <input type="number" name="aimed" value="0" />
    </div>
    <div class="form-group">
        <label>{{localize "GDSA.chat.skill.winds"}}</label>
        <select name="winds">
            {{#select winds}}
                <option value="0" selected>{{localize "GDSA.chat.rangeOpt.noWind"}}</option>
                <option value="-4">{{localize "GDSA.chat.rangeOpt.lightWind"}}</option>
                <option value="-8">{{localize "GDSA.chat.rangeOpt.heavyWind"}}</option>
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "GDSA.chat.skill.sight"}}</label>
        <select name="sight">
            {{#select sight}}
                <option value="0" selected>{{localize "GDSA.chat.rangeOpt.goodSight"}}</option>
                <option value="-2">{{localize "GDSA.chat.rangeOpt.dust"}}</option>
                <option value="-4">{{localize "GDSA.chat.rangeOpt.cloud"}}</option>
                <option value="-2">{{localize "GDSA.chat.rangeOpt.evening"}}</option>
                <option value="-4">{{localize "GDSA.chat.rangeOpt.moon"}}</option>
                <option value="-6">{{localize "GDSA.chat.rangeOpt.star"}}</option>
                <option value="-8">{{localize "GDSA.chat.rangeOpt.night"}}</option>
                <option value="-8">{{localize "GDSA.chat.rangeOpt.invis"}}</option>
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "GDSA.chat.skill.movem"}}</label>
        <select name="movem">
            {{#select movem}}
                <option value="4">{{localize "GDSA.chat.rangeOpt.screwed"}}</option>
                <option value="2">{{localize "GDSA.chat.rangeOpt.still"}}</option>
                <option value="0" selected>{{localize "GDSA.chat.rangeOpt.lightMovement"}}</option>
                <option value="-2">{{localize "GDSA.chat.rangeOpt.movement"}}</option>
                <option value="-4">{{localize "GDSA.chat.rangeOpt.fastMovement"}}</option>
            {{/select}}
        </select>        
    </div>
    <div class="form-group">
        <label>{{localize "GDSA.chat.skill.dista"}}</label>
        <select name="dista">
            {{#select dista}}
                <option value="2">{{localize "GDSA.chat.rangeOpt.veryClose"}}</option>
                <option value="0" selected>{{localize "GDSA.chat.rangeOpt.close"}}</option>
                <option value="-4">{{localize "GDSA.chat.rangeOpt.near"}}</option>
                <option value="-8">{{localize "GDSA.chat.rangeOpt.far"}}</option>
                <option value="-12">{{localize "GDSA.chat.rangeOpt.veryFar"}}</option>
            {{/select}}
        </select>   
    </div>
    <div class="form-group">
        <label>{{localize "GDSA.chat.skill.hida"}}</label>
        <select name="hidea">
            {{#select hidea}}
                <option value="0" selected>{{localize "GDSA.chat.rangeOpt.noHide"}}</option>
                <option value="-2">{{localize "GDSA.chat.rangeOpt.halfHide"}}</option>
                <option value="-4">{{localize "GDSA.chat.rangeOpt.threeQuarterHide"}}</option>
            {{/select}}
        </select>   
    </div>
    <div class="form-group">
        <label>{{localize "GDSA.chat.skill.sizeX"}}</label>
        <select name="sizeX">
            {{#select sizeX}}
                <option value="-10">{{localize "GDSA.chat.rangeOpt.veryTiny"}}</option>
                <option value="-8">{{localize "GDSA.chat.rangeOpt.tiny"}}</option>
                <option value="-6">{{localize "GDSA.chat.rangeOpt.verySmall"}}</option>
                <option value="-4">{{localize "GDSA.chat.rangeOpt.small"}}</option>
                <option value="-2" selected>{{localize "GDSA.chat.rangeOpt.normal"}}</option>
                <option value="0">{{localize "GDSA.chat.rangeOpt.tall"}}</option>
                <option value="2">{{localize "GDSA.chat.rangeOpt.veryTall"}}</option>
                <option value="2">{{localize "GDSA.chat.rangeOpt.huge"}}</option>
            {{/select}}
        </select>   
    </div>
</form>