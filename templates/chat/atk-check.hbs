<div class="GDSA chat message">
    <div class="flawBox {{#if modPresent}}statModBoxAdd{{/if}}">
        
        <div class="flawName"><a class="test" >{{localize "GDSA.chat.dialog.attack"}} ({{ATKValue}})</a></div>
        <div class="dicefiller"></div>
        <div class="diceCol">
            <div class="dices">
                {{#unless confirm}}<div class="diefiller"></div>{{/unless}}
                <div class="dice">{{roll.total}}</div>
                {{#if confirm}}<div class="dice">{{roll2.total}}</div>{{/if}}
            </div>
        </div>

        <div class="dicefiller"></div>
        
        {{#if modPresent}}
            {{#if isAdv}}
            <div class="rollposMod">{{localize "GDSA.chat.skill.advantageOf"}} {{adv}}</div>
            <div class="dicefiller"></div>
            {{/if}}
            {{#if isDis}}
            <div class="rollnegMod">{{localize "GDSA.chat.skill.disadvantageOf"}} {{dis}}</div>
            <div class="dicefiller"></div>
            {{/if}}
        {{/if}}
        
        <div class="dice-formula">
                {{#if result}}
                    {{#if critt}}
                        <div class="rollFlawSuccess">{{localize "GDSA.chat.stat.critt"}} <button class="test item" data-stattype="KL" data-actor="{{actor}}">Test</button></div>
                    {{else}}
                        <div class="rollFlawSuccess">{{localize "GDSA.chat.stat.success"}} <button class="test item" data-stattype="KL" data-actor="{{actor}}">Test</button></div>
                    {{/if}}
                {{else}}               
                    {{#if goof}}
                        <div class="rollFlawFail">{{localize "GDSA.chat.stat.goof"}} <button class="test item" data-stattype="KL" data-actor="{{actor}}">Test</button></div>
                    {{else}}
                        <div class="rollFlawFail">{{localize "GDSA.chat.stat.fail"}} <button class="test item" data-stattype="KL" data-actor="{{actor}}">Test</button></div>
                    {{/if}}
                {{/if}}
        </div>
    </div>
</div>