<div class="langbox">
    <div class="langtext">{{localize "GDSA.charactersheet.lang"}}</div>
    <div class="langbnt"></div>
    <hr class="langhr">
    <div class="langtab">
        <table>

            {{#each template.talents.lang as |item|}}
                {{#if (ifOR ../system.allSkills (ifOR (notEmpty (getData ../system/skill (concat "lang" item.name "")) includeZero=true) (toBoolean item.system.tale.taletype)))}}
                    <tr class="skillitem" data-item-id="{{_id}}" >
                        <td class="skillTableNameBig"><a class="item skill-roll item"  title="{{localize 'GDSA.chat.skill.roll'}}">{{skillName item.name ../this}}</a></td>
                        <td class="skillTableValue">
                            <input class="skillTemp" name="{{concat "system.skill.lang" item.name ""}}" type="number" data-actor="{{../this.actor._id}}"
                            value="{{getData ../system/skill (concat "lang" item.name "")}}" data-stat="{{item.name}}" data-lbl="{{item.name}}" />
                        </td>
                    </tr>
                {{/if}}
			{{/each}}
            
        </table>
    </div>
</div>
