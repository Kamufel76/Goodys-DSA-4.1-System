<div style="height: 600px; text-align: center">
    
    <div class="combatBntBar">
        <a class="myButton lossAsP">{{localize "GDSA.charactersheet.masp"}}</a> 
        <a class="myButton doReg">{{localize "GDSA.charactersheet.reg"}}</a> 
        <a class="myButton getAsP">{{localize "GDSA.charactersheet.pasp"}}</a>
    </div>

    <div class="skill-rit">
        <table style="display: inline-block">
            <tr class="headcol">
                <td class="skillTableNameBig" colspan="2"><div class="addRitKenn">{{localize "GDSA.charactersheet.rit"}}</div></td>
            </tr>
            {{#each ritualSkills as |item id|}}
                <tr class="item" data-item-id="{{_id}}">
                    <td class="skillTableNameBig">{{localize (concat "GDSA.ritualSkills." ./system/skill "")}} 
                            <div class="ritHelper">   
                                <a class="item-edit"><i class="fas fa-gear"></a></i>
                                <a class="item-delete"><i class="fas fa-trash-can"></a></i>
                            </div>
                    </td>
                    <td class="skillTableValue"><input class="skillTemp" name="{{concat "system.skill.rit" ./system/skill ""}}" type="number" value="{{getRitData ../system/skill ./system/skill}}" /></td>
                </tr>
            {{/each}}
                <tr class="item">
                    <td class="skillTableNameBig" colspan="2"><a class="item-create" data-type="ritualSkill"><div class="addRitKenn">+</div></a></td>
                </tr>
        </table>
    </div>

    <div class="holyTraitBox">
        <div class="traithead">{{localize "GDSA.charactersheet.magicTrait"}}</div>
        <div class="flawbnt"><a class="changeTab item" data-destination="magictraitPage" data-origin="magicPage" data-optional="magic">
            <i class="fas fa-book plusSym"></i>
        </a></div>
		<div class="traithrbox"><hr class="flawhr" /></div>
    	<section class="holytraits">
			{{#each magicTraits as |Trait id|}}
				<div class="item" data-type="{{system.type}}" data-item-id="{{_id}}">
                    <div class="trait">{{name}} {{#if (isSleeping this ../this)}}<i>({{localize "GDSA.system.sleeping"}})</i>{{/if}}</div><hr class="flawhr" />
                </div>
			{{/each}}
		</section>
    </div>

</div>