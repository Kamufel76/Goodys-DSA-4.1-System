<div class="invFiller"></div>
<div class="skillHeaderBox">
    <div class="invMenuHelper">
	    <div class="skillHeaderSkillBox3">
            {{#if (equals system.optional "general")}}
                {{localize "GDSA.charactersheet.generalTrait"}}
            {{else}}

                {{#if (equals system.optional "combat")}}
                    {{localize "GDSA.charactersheet.combatTrait"}}
                {{else}}
                    Undifined
                {{/if}}

            {{/if}}
	    </div>
        <div class="invAddBox">
            <a class="changeTab item" data-destination="{{system.origin}}" data-origin="" data-optional="" title="{{localize "GDSA.charactersheet.back"}}"><i class="fas fa-arrow-turn-down-left plusSym2"></i></a>
        </div>
    </div>
</div>

<div class="inventory">
    <table class="CharLog">
            <tr class="gmTableHelper6">
                <td class="gmTableHelper2"><b>{{localize "GDSA.charactersheet.name"}}</b></td>
                <td class="gmTableHelper2"><b>{{localize "GDSA.charactersheet.edit"}}</b></td>
                <td class="gmTableHelper2"><b>{{localize "GDSA.charactersheet.del"}}</b></td>
            </tr>
            {{#each generalTraits as |Trait id|}}
                <tr class="item" data-type="{{system.type}}" data-item-id="{{_id}}">
                    <td class="gmTableHelper3">{{name}}</td>
                    <td class="gmTableHelper4"><a class="item-edit"><i class="fas fa-gear"></a></i></td>
                    <td class="gmTableHelper5"><a class="item-delete"><i class="fas fa-trash-can"></a></i></td>
                </tr>
            {{/each}}
    </table>
</div>