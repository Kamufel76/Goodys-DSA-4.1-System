<div class="wonderBox">
    <div class="menuLine">
        {{localize "GDSA.charactersheet.holyTemp"}}

        <select class="SelHelper1 changeMirTemp" name="system.mirTemp">
            {{#select system.mirTemp}}
                {{#each config.mirTemp as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                {{/each}}
            {{/select}}
        </select>

    </div>

    <div class="skillFiller"></div>

    <div class="form-group subSub">
