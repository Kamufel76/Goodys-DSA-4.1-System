                <select class="SelHelper2" name="{{concat "system.mirikal.cus." item.name ""}}">
                    {{#select (getData ../system/mirikal/cus item.name)}}
                        <option value="0">{{localize "GDSA.charactersheet.mirPlus"}}</option>
                        <option value="6">{{localize "GDSA.charactersheet.mirNeut"}}</option>
                        <option value="18">{{localize "GDSA.charactersheet.mirMinus"}}</option>
                    {{/select}}
                </select>
            </div>
            <a class="item mirRoll" title="roll" data-name="{{skillName item.name ../this}}"><i class="fas fa-dice-d20 faD20Stat"></i></a>
