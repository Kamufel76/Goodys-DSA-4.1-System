<table style="display: inline-block">
    
    {{#each template.talents.meele as |item|}}
        {{#if (ifOR ../system.allSkills (ifOR (notEmpty (getData (getData ../system/skill item.name) "value") includeZero=true) (toBoolean item.system.tale.taletype)))}}
        
            <tr>
                <td class="skillTableNameCombat">{{skillName item.name ../this}}</td>
                <td class="skillTableValue"><input class="skillTemp" name="{{concat "system.skill." item.name ".atk"}}" type="number" value="{{getData (getData ../system/skill item.name) "atk"}}" title="AT"/></td>
                <td class="skillTableFiller"></td>
                <td class="skillTableValue"><input class="skillTemp" name="{{concat "system.skill." item.name ".def"}}" type="number" value="{{getData (getData ../system/skill item.name) "def"}}" title="PA"/></td>
                <td class="skillTableBE">{{#if item.system.tale.BECheck}}{{localize "GDSA.charactersheet.sBE"}} {{skillBE item.system.tale.BEtype item.system.tale.BE}}{{/if}}</td>
                <td class="skillTableValue">
                    <input class="skillTemp" name="{{concat "system.skill." item.name ".value"}}" type="number" data-actor="{{../this.actor._id}}"
                    value="{{getData (getData ../system/skill item.name) "value"}}" data-stat="{{item.name}}" data-lbl="{{item.name}}" />
                </td>
            </tr>

        {{/if}}
    {{/each}}

    {{#each template.talents.range as |item|}}
        {{#if (ifOR ../system.allSkills (ifOR (notEmpty (getData (getData ../system/skill item.name) "value") includeZero=true) (toBoolean item.system.tale.taletype)))}}
            
            <tr>
                <td class="skillTableNameCombat">{{skillName item.name ../this}}</td>
                <td class="skillTableValue"><input class="skillTemp" name="{{concat "system.skill." item.name ".atk"}}" type="number" value="{{getData (getData ../system/skill item.name) "atk"}}" title="AT"/></td>
                <td class="skillTableFiller"></td>
                <td class="skillTableValue"></td>
                <td class="skillTableBE">{{#if item.system.tale.BECheck}}{{localize "GDSA.charactersheet.sBE"}} {{skillBE item.system.tale.BEtype item.system.tale.BE}}{{/if}}</td>
                <td class="skillTableValue">
                    <input class="skillTemp" name="{{concat "system.skill." item.name ".value"}}" type="number" data-actor="{{../this.actor._id}}"
                    value="{{getData (getData ../system/skill item.name) "value"}}" data-stat="{{item.name}}" data-lbl="{{item.name}}" />
                </td>
            </tr>

        {{/if}}
    {{/each}}

</table>