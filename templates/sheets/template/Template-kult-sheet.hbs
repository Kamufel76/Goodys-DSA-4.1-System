                {{#each template.talents.craft as |item|}}
                    <span class="nameSpan">{{skillName item.name ../this}}
                        
                        <select class="SelHelper2" name="{{concat "system.cult." item.name ""}}">
                            {{#select (getData ../system/cult item.name)}}
                                <option value=""></option>
                                <option value="0">{{localize "GDSA.charactersheet.mirPlus"}}</option>
                                <option value="6">{{localize "GDSA.charactersheet.mirNeut"}}</option>
