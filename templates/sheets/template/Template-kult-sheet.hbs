                            {{/select}}
                        </select>
                    </span> <br />

                {{/each}}

                <div class="skillFiller"></div>
                <div class="form-group subSub">
                    <div class="submen"><hr class="subhr" /></div>{{localize "GDSA.charactersheet.giftSkills"}}<div class="submen"><hr class="subhr" /></div>
                </div>
                <div class="skillFiller"></div>

                {{#each template.talents.gift as |item|}}
                    {{#unless (contains item.name "[")}}

                        <span class="nameSpan">{{skillName item.name ../this}}
                            
                            <select class="SelHelper2" name="{{concat "system.cult." item.name ""}}">
                                {{#select (getData ../system/cult item.name)}}
                                    <option value=""></option>
                                    <option value="0">{{localize "GDSA.charactersheet.mirPlus"}}</option>
                                    <option value="6">{{localize "GDSA.charactersheet.mirNeut"}}</option>
                                    <option value="18">{{localize "GDSA.charactersheet.mirMinus"}}</option>
                                {{/select}}
                            </select>
                        </span> <br />

                    {{/unless}}
                {{/each}}

            </div>
            
            <div class="tab spellEffects" data-group="spell" data-tab="spellEffects">

            </div>
            
            <div class="tab spellNotes" data-group="spell" data-tab="spellNotes">
                
                <textarea class="litNotes" name="system.tale.notes">{{system.tale.notes}}</textarea>
                <button class="noteBnt note-gm-post invItem" data-item-id="{{item._id}}">{{localize "GDSA.charactersheet.postGM"}}</button>
                <button class="noteBnt note-all-post invItem" data-item-id="{{item._id}}">{{localize "GDSA.charactersheet.postAll"}}</button>

            </div>
        </section>
    </div>

    <button class="adBnt item-close invItem" data-item-id="{{item._id}}">{{localize "GDSA.charactersheet.closeLabel"}}</button>
</form>