<form class="{{cssClass}}" autocomplete="off">

    <header class="sheet-header">
        <div class="ritHelper1">
            <div class="ritHelper2">{{localize "GDSA.itemsheet.name"}}</div>
            <div class="ritHelper3">{{localize "GDSA.itemsheet.skill"}}</div>
            <div class="ritHelper2"><input class="ritHelper4" name="name" type="text" value="{{item.name}}" /></div>

            <select class="input160" name="system.skill">
                {{#select system.skill}}
                    {{#each config.ritualSkills as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                    {{/each}}
                {{/select}}
            </select>
        </div>
    </header>

    <select class="ritHelper5" name="system.att1">
        {{#select system.att1}}
            {{#each config.attributes as |name type|}}
                <option value="{{type}}">{{type}}</option>
            {{/each}}
        {{/select}}
    </select>

    <select class="ritHelper5" name="system.att2">
        {{#select system.att2}}
            {{#each config.attributes as |name type|}}
                <option value="{{type}}">{{type}}</option>
            {{/each}}
        {{/select}}
    </select>

    <select class="ritHelper5" name="system.att3">
        {{#select system.att3}}
            {{#each config.attributes as |name type|}}
                <option value="{{type}}">{{type}}</option>
            {{/each}}
        {{/select}}
    </select>

    PDF<input class="ritHelper6" name="system.wdzPage" type="text" value="{{system.wdzPage}}" />

    <button class="adBnt item-close invItem" data-item-id="{{item._id}}">{{localize "GDSA.charactersheet.closeLabel"}}</button>
</form>