<form class="{{cssClass}}" autocomplete="off">

    <header class="sheet-header">
        <div class="ritHelper1">
            <div class="spHelper1">{{localize "GDSA.itemsheet.name"}}</div>
            <div class="spHelper3">{{localize "GDSA.itemsheet.zfw"}}</div>
            <div class="spHelper1"><input class="spHelper2" name="name" type="text" value="{{item.name}}" /></div>
            <div class="spHelper4"><input class="spHelper4" name="system.zfw" type="text" value="{{system.zfw}}" /></div>
        </div>
    </header>

    <select class="ritHelper5" name="system.att1">
        {{#select system.att1}}
            {{#each config.attributes as |name type|}}
                <option value="{{type}}">{{type}}</option>
            {{/each}}
        {{/select}}
    </select>
    <select class="ritHelper5" name="system.att2">
        {{#select system.att2}}
            {{#each config.attributes as |name type|}}
                <option value="{{type}}">{{type}}</option>
            {{/each}}
        {{/select}}
    </select>
    <select class="ritHelper5" name="system.att3">
        {{#select system.att3}}
            {{#each config.attributes as |name type|}}
                <option value="{{type}}">{{type}}</option>
            {{/each}}
        {{/select}}
    </select>

    PDF<input class="ritHelper6" name="system.lcdPage" type="text" value="{{system.lcdPage}}" />

    <button class="adBnt item-close invItem" data-item-id="{{item._id}}">{{localize "GDSA.charactersheet.closeLabel"}}</button>
</form>